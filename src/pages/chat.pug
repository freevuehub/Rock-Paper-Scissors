script.
  const $form = document.querySelector('#form')
  const $messageList = document.querySelector('.message-list')
  const $textarea = document.querySelector('.textarea')

  const onSendMessage = () => {
    const { chat } = $form.elements
    const { value } = chat

    if (value.trim()) {
      socket.emit('chat message', roomId, name, value.trim())

      chat.value = ''
    }

     $textarea.focus()
  }

  $form.onsubmit = (event) => {
    event.preventDefault()

    onSendMessage()
  }

  $form.onkeydown = (event) => {
    if (event.key === 'Enter') {
      event.preventDefault()
    }
  }
  $form.onkeyup = (event) => {
    if (event.key === 'Enter') {
      event.preventDefault()

      onSendMessage()
    }
  }
  $textarea.onfocus = () => {
    //- $messageList.scrollTo(0, $messageList.scrollHeight)
  }

  socket.on('chat message', (messageName, message, type) => {
    const $li = document.createElement('li')

    switch (type) {
      case 'join':
        $li.className = 'join'
        $li.innerHTML = `
          <div>
            <p>${messageName}님께서 입장하셨습니다.</p>
          </div>
        `

        break
      case 'leave':
        $li.className = 'join'
        $li.innerHTML = `
          <div>
            <p>${messageName}님께서 퇴장하셨습니다.</p>
          </div>
        `

        break
      default:
        $li.className = messageName === name ? 'is-me' : ''
        $li.innerHTML = `
          <div>
            <span>${messageName}</span>
            <p>${message}</p>
          </div>
        `
    }

    $messageList.append($li)
    $messageList.scrollTo(0, $messageList.scrollHeight)
  })